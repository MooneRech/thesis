<mapper namespace="lv.animelistapp.mapper.UserMapper">


    <insert id="registerUser" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO lval_users (username,password,email)
        VALUES (
            #{username},
            #{password},
            #{email} )
    </insert>

